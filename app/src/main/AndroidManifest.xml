<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="connor.proportionschecker">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="true"/>
    <application>
        android:allowBackup="true"
        android:icon="@mipmap/pc_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pc_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ImagePickActivity" android:label="@string/app_name" android:theme="@style/Theme.AppCompat.Light.NoActionBar" android:exported="true">
            android:icon="@mipmap/pc_icon"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FlippedCameraActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" android:exported="true">
        </activity>
    </application>

</manifest>